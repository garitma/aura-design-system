// Aura Design System

// General

html
  font-family var(--aura-font-stack) 
  line-height 1.21053
  -webkit-font-smoothing: antialiased;
  text-size-adjust: 100%;
  text-rendering: optimizelegibility;
  box-sizing: border-box;

pre
  font-family var(--aura-font-stack)

body
  font-size: visualScale-base


// Headlines


  h1,
  h2, 
  h3, 
  h4, 
  h5, 
  h6, 
  p, 
  .h1, 
  .h2, 
  .h3, 
  .h4, 
  .h5, 
  .h6 {
    font-size: clamp(var(--min), var(--val), var(--max));
    margin: 0
    padding: 0
  }


h1, 
.h1 {
  --min: visualScale-h1 * 0.65; 
  --val: 3.03vw + 1rem; 
  --max: visualScale-h1; 
}

h2, 
.h2 {
  --min: visualScale-h2 * 0.65; 
  --val: 3.03vw + 1rem; 
  --max: visualScale-h2; 
}


h3, 
.h3 {
  --min: visualScale-h3 * 0.65; 
  --val: 3.03vw + 1rem; 
  --max: visualScale-h3; 
}

h4,
.h4 {
  --min: visualScale-h4 * 0.65; 
  --val: 3.03vw + 1rem; 
  --max: visualScale-h4; 
}

h5, 
.h5 {
  --min: visualScale-h5 * 0.75; 
  --val: 3.03vw + 1rem; 
  --max: visualScale-h5; 
}

h6, 
.h6 {
  --min: visualScale-h6 * 0.85; 
  --val: 3.03vw + 1rem; 
  --max: visualScale-h6; 
}

.p {
  --min: visualScale-base
  --val: 3.03vw + 1rem; 
  --max: visualScale-base; 
}

// Content

p
    margin: var(--aura) 0

blockquote
    font-family var(--aura-font-quotes)
    text-transform uppercase
    font-weight 600
    @extend .h4

ul:not(.default)
    margin 0
    padding 0
    list-style none
  


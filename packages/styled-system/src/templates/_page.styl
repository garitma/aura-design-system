// Aura Design System
html
    margin: 0
    padding: 0
    color: var(--aura-text-primary)
   
body
    margin: 0
    padding: 0
    min-width 320px
    max-width 100%
    overflow-x hidden  
    background-color: var(--aura-bg)

.page
    padding: 0
    flex: 1
    display: flex
    flex-direction: column
    justify-content: flex-start
    &-pancake
        display: grid
        grid-template-rows: auto 1fr auto
        min-height: 100vh;
    &-dashboard
        display: grid
        grid-template-rows: auto 1fr auto
        grid-template-columns: 100px 1fr
        min-height: 100vh;

*
    box-sizing: border-box;
    touch-action: manipulation;
    &::selection
        color: var(--aura-accents-primary)
        background: var(--aura-selector)
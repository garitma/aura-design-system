// Aura Design System

select:not(.default)
       color var(--aura-accents-10)
       background-color var(--aura-input-bg)
       width: 100%
       font-family inherit
       font: inherit
       height calc(var(--aura) * 4)
       padding 0 calc(var(--aura) * 2)
       line-height calc(var(--aura) * 4)px
       box-sizing: border-box
       border 0
       -webkit-appearance: none
       -moz-appearance: none
       appearance: none
       mixin-border-radius(var(--aura-input-radius))
       &:focus
              outline: var(--aura-outline)
       &:disabled
              @extend .disabled

.dropdown
       position: absolute;
       display: flex
       right: calc(var(--aura) * 2)
       left: auto
       top: 50%;
       transform: translateY(-50%);

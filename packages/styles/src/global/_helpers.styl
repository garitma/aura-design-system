// Aura Design System

.uline 
  text-decoration: underline;

.ulinea a:not(.button-link, .button-fill) 
  text-decoration: underline;

.centertxt
    text-align center
    &-small
        @media only screen and (max-width: $small)
            text-align: center
    
.lefttxt
    text-align left 

.righttxt
    text-align right 

.lalign
    justify-content: flex-start!important;

.ralign
    justify-content: flex-end!important;

.valign
    mixin-flex()
    justify-content center
    flex-direction column

.vfluid
    height 100%!important

.fluid
    width 100%!important

.circle
    mixin-border-radius(50%!important)

.square
    mixin-border-radius(0!important)

.disabled
    opacity var(--aura-opacity)
    cursor default

.predisabled
    opacity var(--aura-opacity)
    cursor pointer
    transition opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1)
    &:hover
        opacity 1

.typeahead
    padding-left calc(var(--aura) * 6)!important

.flowx
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;

.flowcancel
    overflow hidden

.truncate
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

.anchor
    position: relative;

.overley
    position absolute
    right 0
    left 0
    top 0
    bottom 0
    cursor pointer
    z-index: 5

.hold
    position fixed
    z-index: 7

.pin
    position absolute
    z-index: 2

.right
    right 0
.left
    left 0
.top
    top 0
.bottom
    bottom 0

.action
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.z10 
  z-index: 10;

.hidden
    display none

@media only screen and (max-width: $small)
    .hide-small
        display none

@media screen and (min-width: $small) and (max-width: $large)
    .hide-medium
        display none

@media only screen and (min-width: $large)
    .hide-large
        display none

.notevent
    pointer-events: none;

.pointer
    cursor pointer

.scrolleable {
  overflow-y: scroll;
  overflow-x: hidden;
  max-height: 50vh;
}

.sticky {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
}

.b0 {
  border: 0 !important;
}
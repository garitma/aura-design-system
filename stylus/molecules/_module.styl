// Aura Design System

.mod
    background-color var(--aura-module)
    mixin-border-radius(var(--aura-radius))
    box-sizing border-box
    position relative
    overflow hidden
    &-media
        position relative
        overflow hidden
        img
            @extend .container
            max-width: 100%;
            display: block;
            position: relative;
            object-fit: cover;
    &-detail
        mixin-border-radius(var(--aura-radius))
        background-color var(--aura-module)
        padding aura * 2
        display flex
        flex-direction: column
        flex-grow: 1

.block-img
    @extend .mod-media
    mixin-border-radius(var(--aura-radius))



    
  
        


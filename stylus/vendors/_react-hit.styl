.react-hint {
	padding: 5px;
	position: absolute;
	z-index: 9;
	cursor: default;
	animation: .2s fadeIn;
}

.react-hint__content {
	padding: 10px;
	mixin-border-radius(5px);
	background: Black;
	color: Snow;
}

.react-hint:after {
	content: '';
	width: 0;
	height: 0;
	margin: auto;
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	border: 5px solid transparent;
}

.react-hint--top:after {
	top: auto;
	border-bottom: none;
	border-top-color: Black;
}

.react-hint--left:after {
	left: auto;
	border-right: none;
	border-left-color: Black;
}

.react-hint--right:after {
	right: auto;
	border-left: none;
	border-right-color: Black;
}

.react-hint--bottom:after {
	bottom: auto;
	border-top: none;
	border-bottom-color: Black;
}

@keyframes fadeIn {
	from {
		opacity: 0;
	}

	to {
		opacity: 1;
	}
}
